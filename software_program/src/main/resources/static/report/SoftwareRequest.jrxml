                <reportElement x="0" y="-20" width="200" height="1"/>
            </line>
            <!-- текст -->
            <staticText>
                <reportElement x="0" y="-17" width="150" height="17" mode="Opaque"/>

                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="dejavu-sans" size="10"/>
                </textElement>
